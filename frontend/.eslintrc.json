{
  "extends": [
    "next",
    "eslint-config-next",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "react-hooks/exhaustive-deps": [
      "off"
    ],
    "import/no-anonymous-default-export": [
      "off"
    ],
    // TODO: resume this
    // "no-unused-vars": ["warn"],
    "no-unused-vars": [
      "off"
    ],
    "react/no-unescaped-entities": [
      "off"
    ],
    "@next/next/no-img-element": [
      "off"
    ]
  }
}